<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_name"
            android:inputType="text"
            android:hint="Nama lengkap (Sesuai KTP)"
            android:textSize="10sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="10sp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="10sp"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Konfirmasi Password"
            android:textSize="10sp"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"/>


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Hp"
            android:textSize="10sp"
            android:inputType="phone"
            android:layout_marginTop="16dp"/>

        <EditText
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input"
            android:inputType="text"
            android:hint="Detail Alamat"
            android:textSize="10sp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_spinner_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kecamatan"
                android:padding="10dp"/>
            <Spinner
                android:id="@+id/spinner1"
                android:layout_below="@id/tv_spinner_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:dropDownSelector="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/tv_spinner_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kelurahan"
                android:padding="10dp"/>
            <Spinner
                android:id="@+id/spinner2"
                android:layout_below="@id/tv_spinner_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:dropDownSelector="@color/colorPrimary"
                />

        </TableLayout>
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim"
            android:textSize="14sp"
            android:background="#91E4FB"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>
</ScrollView>